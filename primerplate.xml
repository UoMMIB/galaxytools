<tool id="primerplate" name="PrimerPlate" version="0.1.0">
    <description>enzyme sequence selection from reaction template</description>
    <command detect_errors="exit_code"><![CDATA[
        python $__tool_directory__/primerPlate.py $input1 $output1 
    ]]></command>
    <inputs>
        <param type="data" name="input1" format="csv" />
    </inputs>
    <outputs>
        <data name="output1" format="csv" from_work_dir="out.csv" />
    </outputs>
    <help><![CDATA[
    Primer plate tool.
    - Input file (csv).
    - Output file (csv).
    ]]></help>
</tool>
