<tool id="primerplate" name="PrimerPlate" version="0.1.0">
    <description>get primer file convert into primer plate for worklist generation.</description>
    <command detect_errors="exit_code"><![CDATA[
        python3 $__tool_directory__/primerPlate.py $input1 $output1 
    ]]></command>
    <inputs>
        <param type="data" name="input1" format="csv" />
        <repeat name="queries" title="Dataset">
            <param name="input2" type="data" label="Select" format="csv" />
        </repeat>
    </inputs>
    <outputs>
        <data name="output1" format="csv" from_work_dir="out.csv" />
    </outputs>
    <help><![CDATA[
    Primer plate tool.
    - Input file (csv).
    - Output file (csv).
    ]]></help>
</tool>
