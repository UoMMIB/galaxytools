<tool id="lcr2tool" name="LCR2Tool" version="0.1.0">
    <description>generate work list from list of plasmids.</description>
    <command detect_errors="exit_code"><![CDATA[
        python3 $__tool_directory__/lcr2Tool.py -output $output1 -tempFolder $output1.extra_files_path
    ]]></command>
    <inputs>
    	<param name="input7" type="data" label="Plasmids" help="Plasmid csv file" format="csv"/>
    </inputs>
    <outputs>
        <data name="output1" format="csv" from_work_dir="out.csv" />
    </outputs>
    <help><![CDATA[
    LCR tool.
    ]]></help>
</tool>
